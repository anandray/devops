  $cmds[] = "wcloud createcoll --httpport=443 wolk://dweb.archive.org/metadata http://c8.wolk.com:99/dweb.archive.org";
  foreach ($cmds as $c) {
      sleep(15);
      echo "$c\n";
      exec($c, $arr);
  }
}
